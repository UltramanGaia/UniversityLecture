<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qrcode_transparent_black"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="280dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="0.00"
            android:src="@drawable/qrcode_bg" />

        <Button
            android:id="@+id/go_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/close" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/myTwoDCode"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="我的二维码"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/myTwoDCode"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_weight="0.00"
            android:padding="5dp"
            android:background="@drawable/qrcode_border"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myTwoDCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="扫我登记并领取讲座票"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>