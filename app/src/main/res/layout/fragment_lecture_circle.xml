<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.universitylecture.universitylecture.LectureCircleFragment">


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_layoyt_in_lecture_circle"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_in_lecture_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/my_bar"
            >
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
