<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.universitylecture.universitylecture">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>


    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".view.LaunchActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.SearchActivity" />
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.LoginActivity"/>
        <activity android:name=".view.selectInstituteForLaunch"/>
        <activity android:name=".view.SettingActivity"/>
        <activity android:name=".view.MyInformation"/>
        <activity android:name=".view.ChangeInformation"/>
        <activity android:name=".view.SelectInformationForLaunch"/>
        <activity android:name=".view.RegisterMobileActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name=".view.RegisterUserInfoActivity"
            android:theme="@style/AppTheme"/>


    </application>

</manifest>